    <% for(post of posts){ %>
        
        <div class="post" type="button" id="<%= post.id %>">
            <h3 class="user">
                @<%=post.username %>
            </h3>
            <h4 class="content">
                <%= post.content %>
            </h4>
            <!-- <a href="http://localhost:8080/posts/<%= post.id%>">Individal post</a> -->
